<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >
        <RelativeLayout
            android:id="@+id/rl_myEvaluate_back"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back_selector"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的评价"
            android:textSize="@dimen/tv_shop_name"
            android:textColor="@color/colorMain"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_myEvaluate_tabLinerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:gravity="center_vertical"
        >
        <RelativeLayout
            android:id="@+id/rlOne"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_myEvaluate_evaluateOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商铺评价"
                android:layout_centerInParent="true"
                android:textSize="@dimen/tv_shop_n"
                android:textColor="@color/colorEvaluateText"
                />
            <ImageView
                android:id="@+id/iv_myEvaluate_lineOne"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorshophint"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_myEvaluate_evaluateTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUYER评价"
                android:layout_centerInParent="true"
                android:textSize="@dimen/tv_shop_n"
                android:textColor="@color/colorEvaluateText"
                />
            <ImageView
                android:id="@+id/iv_myEvaluate_lineTwo"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorshophint"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlThree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_myEvaluate_evaluateThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对方评价"
                android:textSize="@dimen/tv_shop_n"
                android:layout_centerInParent="true"
                android:textColor="@color/colorEvaluateText"
                />
            <ImageView
                android:id="@+id/iv_myEvaluate_lineThree"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorshophint"
                />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_myEvaluate_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
