        android:id="@+id/rl_accountSafety_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_mar"
        android:background="@drawable/personal_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_size"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_accountSafety_backImgTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/tv_shop_marleft"
            android:src="@mipmap/enter"
            />
        <TextView
            android:id="@+id/tv_accountSafety_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_accountSafety_backImgTwo"
            android:text="未认证"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorMainTitle"
            android:layout_marginRight="@dimen/tv_shop_marleft"
            android:textSize="@dimen/tv_shop_size"
            />
    </RelativeLayout>
    <ImageView
