<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >
        <RelativeLayout
            android:id="@+id/rl_account_back"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back_selector"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wo_account"
            android:textSize="@dimen/tv_shop_name"
            android:textColor="@color/colorMain"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@mipmap/coin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/yuyu"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorpoptitle"
        android:textSize="@dimen/tv_shop_size"
        />
    <TextView
        android:id="@+id/account_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/e_188_00"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/iv_personal_h"
        android:textSize="@dimen/yuyutext"
        android:textColor="@color/colorloginreg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/_1_1"
        android:layout_marginTop="@dimen/iv_personal_ivh"
        android:layout_marginLeft="@dimen/tv_shop_marbom"
        android:textColor="@color/colorrb"
        android:textSize="@dimen/tv_shop_s"
        />
    <Button
        android:id="@+id/b_account_recharge"
        android:layout_marginLeft="@dimen/ll_guide_h"
        android:layout_marginRight="@dimen/ll_guide_h"
        android:layout_marginTop="@dimen/ll_guide_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_marleft"
        android:textSize="@dimen/tv_shop_name"
        android:textColor="@color/text_color_selector"
        android:text="@string/chong"
        android:background="@drawable/login_button_shap"
        />
    <Button
        android:id="@+id/b_account_withdraw"
        android:layout_marginLeft="@dimen/ll_guide_h"
        android:layout_marginRight="@dimen/ll_guide_h"
        android:layout_marginTop="@dimen/tv_shop_mar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_marleft"
        android:textSize="@dimen/tv_shop_name"
        android:textColor="@color/text_redcolor_selector"
        android:text="@string/xian"
        android:background="@drawable/details_button_selector"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/_10"
        android:layout_marginTop="@dimen/tv_main_qu"
        android:textColor="@color/colorshophint"
        android:textSize="@dimen/tv_shop_s"
        />
</LinearLayout>
