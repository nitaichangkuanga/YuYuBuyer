<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_selector"
        android:padding="12dp"
        >
        <TextView
            android:id="@+id/bankCrad_itemListView_bankType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国农业银行 储蓄卡"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_size"
            />

        <TextView
            android:id="@+id/bankCrad_itemListView_bankNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/itemListView_foot"
            android:layout_toRightOf="@id/bankCrad_itemListView_bankType"
            android:layout_marginLeft="@dimen/tv_shop_martop"
            android:text="(9477)"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_size"
            />
    </RelativeLayout>

</LinearLayout>
