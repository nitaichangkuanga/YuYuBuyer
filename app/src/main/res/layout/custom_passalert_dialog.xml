<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <TextView
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码操作"
        android:textColor="@color/colorloginreg"
        android:textSize="@dimen/tv_shop_t"
        />
    <TextView
        android:layout_marginTop="@dimen/tv_shop_martop"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textColor="@color/colorpoptitle"
        android:textSize="@dimen/tv_shop_s"
        />
    <com.wushuikeji.www.yuyubuyer.view.ClearEditText
        android:id="@+id/et_pass_oldPassword"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/tv_shop_mar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_h"
        android:background="@drawable/dialog_shap"
        android:padding="@dimen/tv_shop_martop"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="请输入旧密码"
        android:textColorHint="@color/colorshophint"
        android:textColor="@color/colorloginreg"
        android:textSize="@dimen/tv_shop_size"
        />
    <com.wushuikeji.www.yuyubuyer.view.ClearEditText
        android:id="@+id/et_pass_newPassword"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_h"
        android:background="@drawable/dialog_shap"
        android:padding="@dimen/tv_shop_martop"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="请输入新密码(6位字符以上)"
        android:textColorHint="@color/colorshophint"
        android:textColor="@color/colorloginreg"
        android:textSize="@dimen/tv_shop_size"
        />
    <com.wushuikeji.www.yuyubuyer.view.ClearEditText
        android:id="@+id/et_pass_decidedPassword"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_h"
        android:background="@drawable/dialog_shap"
        android:padding="@dimen/tv_shop_martop"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="再次输入新密码(6位字符以上)"
        android:textColorHint="@color/colorshophint"
        android:textColor="@color/colorloginreg"
        android:textSize="@dimen/tv_shop_size"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:layout_marginTop="@dimen/et_reg"
        android:background="@color/colornewsline"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/b_pass_canle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="#0000ff"
            android:background="@drawable/et_button_selector"
            />
        <ImageView
            android:layout_width="@dimen/xiangsu"
            android:layout_height="match_parent"
            android:background="@color/colornewsline"
        />
        <Button
            android:id="@+id/b_pass_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="提交"
            android:background="@drawable/et_button_selector"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="#0000ff"
            />
    </LinearLayout>
</LinearLayout>
