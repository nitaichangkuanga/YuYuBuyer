<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <RelativeLayout
        android:id="@+id/rl_report_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >
        <RelativeLayout
            android:id="@+id/rl_reportInput_back"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back_selector"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="举报"
            android:textSize="@dimen/tv_shop_name"
            android:textColor="@color/colorMain"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_reportinput_tv"
        android:layout_below="@id/rl_report_rl"
        android:layout_marginTop="@dimen/tv_main_qu"
        android:layout_marginBottom="@dimen/tv_main_qu"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入举报理由:"
        android:singleLine="true"
        android:textColor="@color/colorpoptitle"
        android:textSize="@dimen/tv_shop_t"
        />
    <EditText
        android:id="@+id/et_reportInput_et"
        android:gravity="top"
        android:layout_alignLeft="@id/tv_reportinput_tv"
        android:layout_below="@id/tv_reportinput_tv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/report_input_shap"
        android:padding="@dimen/iv_personal_h"
        android:textSize="@dimen/tv_shop_size"
        android:textColor="@color/colorloginreg"
        />

    <Button
        android:id="@+id/b_reportInput_submit"
        android:layout_below="@id/et_reportInput_et"
        android:layout_marginLeft="@dimen/iv_login"
        android:layout_marginRight="@dimen/iv_login"
        android:layout_marginTop="@dimen/tv_shop_mar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_shop_name"
        android:textColor="@color/text_color_selector"
        android:text="提交"
        android:background="@drawable/login_button_shap"
        />
    <ProgressBar
        android:id="@+id/pb_reportInput_ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/b_guide_top"
        android:visibility="gone"
        android:layout_below="@id/b_reportInput_submit"
        />

</RelativeLayout>
