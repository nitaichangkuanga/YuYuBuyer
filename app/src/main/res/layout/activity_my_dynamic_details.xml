<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_mdDetails_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >

        <RelativeLayout
            android:id="@+id/rl_mdDetails_back"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:background="@drawable/back_selector"
                />
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_loading_dyDetailsProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        />

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:layout_below="@id/rl_mdDetails_rl"
        android:id="@+id/in_dyDetails_pf"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ListView
            android:id="@+id/mdDetails_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:fadingEdge="none"
            android:scrollbarStyle="outsideOverlay"
            android:cacheColorHint="#00000000"
            android:scrollbarThumbVertical="@mipmap/ui_shuxian"
            />
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    <com.wushuikeji.www.yuyubuyer.view.InputMethodLayout
        android:id="@+id/custom_dyDetails_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:padding="@dimen/tv_main_qu"
            android:visibility="gone"
            android:background="@color/colorAllBg"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/b_dnDetails_send"
                android:layout_width="55dp"
                android:layout_height="33dp"
                android:text="发送"
                android:layout_alignParentRight="true"
                android:background="@drawable/input_button_shap"
                android:textSize="@dimen/tv_shop_size"
                android:textColor="@color/text_sendcolor_selector"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_dnDetails_emoIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/b_dnDetails_send"
                android:layout_alignTop="@id/b_dnDetails_send"
                android:layout_alignBottom="@id/b_dnDetails_send"
                android:src="@mipmap/emo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tv_main_qu"
                android:layout_marginRight="@dimen/tv_shop_mar"
                />
            <EditText
                android:id="@+id/ce_dnDetails_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/tv_shop_mar"
                android:hint="请输入您的评论"
                android:layout_toLeftOf="@id/iv_dnDetails_emoIv"
                android:textSize="@dimen/tv_shop_t"
                android:textColorHint="@color/colorloginhint"
                android:textColor="@color/colorloginreg"
                />
        </RelativeLayout>

    </com.wushuikeji.www.yuyubuyer.view.InputMethodLayout>
</RelativeLayout>
