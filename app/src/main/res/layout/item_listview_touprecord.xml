<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_marleft"
        android:background="@drawable/listview_selector"
        >

        <TextView
            android:id="@+id/tv_itemToupRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额"
            android:textColor="@color/colorshopname"
            android:textSize="@dimen/tv_shop_size"
            />

        <ImageView
            android:id="@+id/iv_ToupRecord_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/enter"
            />

        <TextView
            android:id="@+id/tv_itemToupRecord_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/click_login_top"
            android:layout_marginRight="@dimen/iv_personal_ivh"
            android:layout_toLeftOf="@id/iv_ToupRecord_jian"
            android:layout_toRightOf="@id/tv_itemToupRecord"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/colorshopname"
            android:textSize="@dimen/tv_shop_size"
            />

        <TextView
            android:id="@+id/tv_itemToupRecord_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_itemToupRecord"
            android:layout_below="@id/tv_itemToupRecord"
            android:layout_marginTop="@dimen/iv_personal_ivh"
            android:text="进行中"
            android:textColor="@color/colorReport"
            android:textSize="@dimen/tv_shop_s"
            />

        <TextView
            android:id="@+id/tv_itemToupRecord_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_itemToupRecord_status"
            android:layout_marginRight="@dimen/iv_personal_ivh"
            android:layout_toLeftOf="@id/iv_ToupRecord_jian"
            android:textColor="@color/colorshophint"
            android:textSize="@dimen/tv_shop_s"
            />

        <TextView
            android:id="@+id/tv_itemToupRecord_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_itemToupRecord_status"
            android:layout_marginRight="@dimen/b_reg"
            android:layout_toLeftOf="@id/tv_itemToupRecord_time"
            android:textColor="@color/colorshophint"
            android:textSize="@dimen/tv_shop_s"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />

</LinearLayout>
