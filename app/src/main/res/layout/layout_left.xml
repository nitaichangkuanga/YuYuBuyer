<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="150dp"
                android:layout_marginLeft="@dimen/tv_main_qu"
                android:layout_marginTop="@dimen/tv_main_qu"
                android:layout_marginBottom="@dimen/tv_main_qu"
                >

                <ImageView
                    android:id="@+id/iv_chat_leftHeadImg"
                    android:layout_width="55dp"
                    android:layout_height="62dp"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/zanwutupian"
                    />

                <TextView
                    android:id="@+id/tv_chat_leftContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorpoptitle"
                    android:textSize="@dimen/tv_shop_size"
                    android:background="@drawable/left"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="@dimen/iv_personal_h"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
</LinearLayout>