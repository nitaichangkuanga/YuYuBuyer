<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_customDialog_phone"
        android:layout_marginTop="@dimen/mar_width"
        android:layout_marginBottom="@dimen/mar_width"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="028-58745697"
        android:textColor="@color/colorloginreg"
        android:textSize="@dimen/tv_shop_n"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/b_call_canle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="#0000ff"
            android:background="@drawable/et_button_selector"
            />
        <ImageView
            android:layout_width="@dimen/xiangsu"
            android:layout_height="match_parent"
            android:background="@color/colornewsline"
        />
        <Button
            android:id="@+id/b_call_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="呼叫"
            android:background="@drawable/et_button_selector"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="#0000ff"
            />
    </LinearLayout>
</LinearLayout>
