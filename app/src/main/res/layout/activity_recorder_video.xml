<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/video_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >
        <RelativeLayout
            android:id="@+id/rl_video_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_video_back"
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back_selector"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/b_reg"
                android:layout_toRightOf="@id/iv_video_back"
                android:text="取消"
                android:textSize="@dimen/tv_shop_name"
                android:textColor="@color/colorMain"
                />
        </RelativeLayout>
        <ImageButton
            android:id="@+id/ib_video_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/camera_video"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/tv_shop_marleft"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
    <VideoView
        android:id="@+id/vidio_videoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <ProgressBar
        android:id="@+id/video_pb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_shop_mar"
        >
        <TextView
            android:id="@+id/video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击开始录制视频"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="@color/colorpoptitle"
            android:layout_centerHorizontal="true"
            />
        <Chronometer
            android:id="@+id/chronometer"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="@color/colorpoptitle" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:clickable="true"
            android:id="@+id/iv_video_start"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/b_guide_left"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@mipmap/btn_start"
            />
        <ImageView
            android:clickable="true"
            android:id="@+id/iv_video_stop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/ll_mainshop_h"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:visibility="gone"
            android:background="@drawable/custom_cir"
            />
        <TextView
            android:id="@+id/tv_video_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:text="点击完成"
            android:visibility="gone"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="@color/colorMainTitle"
            />
    </RelativeLayout>


</LinearLayout>
