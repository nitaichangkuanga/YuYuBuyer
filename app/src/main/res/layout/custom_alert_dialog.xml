<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <TextView
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="认证"
        android:textColor="@color/colorloginreg"
        android:textSize="@dimen/tv_shop_t"
        />
    <TextView
        android:layout_marginTop="@dimen/tv_shop_martop"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入认证信息"
        android:textColor="@color/colorpoptitle"
        android:textSize="@dimen/tv_shop_s"
        />
    <com.wushuikeji.www.yuyubuyer.view.ClearEditText
        android:id="@+id/clearEt_dialog_userName"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/tv_shop_mar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_h"
        android:background="@drawable/dialog_shap"
        android:padding="@dimen/tv_shop_martop"
        android:singleLine="true"
        android:hint="请输入真实姓名"
        android:textColorHint="@color/colorshophint"
        android:textColor="@color/colorloginreg"
        android:textSize="@dimen/tv_shop_size"
        />
    <com.wushuikeji.www.yuyubuyer.view.ClearEditText
        android:id="@+id/clearEt_dialog_idCard"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_h"
        android:background="@drawable/dialog_shap"
        android:padding="@dimen/tv_shop_martop"
        android:singleLine="true"
        android:hint="请输入身份证号"
        android:textColorHint="@color/colorshophint"
        android:textColor="@color/colorloginreg"
        android:textSize="@dimen/tv_shop_size"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:layout_marginTop="@dimen/et_reg"
        android:background="@color/colornewsline"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/b_alert_canle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="#0000ff"
            android:background="@drawable/et_button_selector"
            />
        <ImageView
            android:layout_width="@dimen/xiangsu"
            android:layout_height="match_parent"
            android:background="@color/colornewsline"
        />
        <Button
            android:id="@+id/b_alert_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="提交"
            android:background="@drawable/et_button_selector"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="#0000ff"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_alertDialog_progressBar"
        android:layout_marginTop="@dimen/b_guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />
</LinearLayout>
