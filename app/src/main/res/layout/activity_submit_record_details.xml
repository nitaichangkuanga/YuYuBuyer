<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_toUpRecordDetails_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >

        <RelativeLayout
            android:id="@+id/rl_submitRecordDetails_back"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:background="@drawable/back_selector"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现详情"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/tv_shop_name"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_submit_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:padding="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_submit_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提现金额"
            android:textColor="@color/colorregister"
            android:textSize="@dimen/tv_shop_size"
            />

        <TextView
            android:id="@+id/tv_submit_money"
            android:layout_toRightOf="@id/tv_submit_t"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_size"
            />
        <TextView
            android:id="@+id/tv_submit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorReport"
            android:textSize="@dimen/tv_shop_size"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:layout_marginTop="@dimen/tv_shop_mar"
        android:background="@color/colornewsline"
        />

    <RelativeLayout
        android:id="@+id/rl_submit_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:padding="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_submit_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提现时间"
            android:textColor="@color/colorregister"
            android:textSize="@dimen/tv_shop_size"
            />

        <TextView
            android:id="@+id/tv_submit_dateAndtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_size"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_submit_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:paddingLeft="@dimen/tv_shop_med"
        android:paddingRight="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="到账银行"
            android:textColor="@color/colorregister"
            android:textSize="@dimen/tv_shop_size"
            />

        <TextView
            android:id="@+id/tv_submit_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_size"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_submit_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:padding="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_submit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="到账卡号"
            android:textColor="@color/colorregister"
            android:textSize="@dimen/tv_shop_size"
            />

        <TextView
            android:id="@+id/tv_submit_bankCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_size"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />

    <ProgressBar
        android:id="@+id/pb_submitDetails_loading"
        android:layout_marginTop="@dimen/b_guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

</LinearLayout>
