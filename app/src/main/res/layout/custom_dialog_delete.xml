<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_popupwindow"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_send_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="center"
            android:text="是否确定删除此动态"
            android:textColor="@color/colorpoptitle"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xiangsu"
            android:background="@color/colornewsline"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/b_delete_canle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="#0000ff"
            android:background="@drawable/et_button_selector"
            />
        <ImageView
            android:layout_width="@dimen/xiangsu"
            android:layout_height="match_parent"
            android:background="@color/colornewsline"
            />
        <Button
            android:id="@+id/b_delete_decided"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:background="@drawable/et_button_selector"
            android:textSize="@dimen/tv_shop_t"
            android:textColor="#0000ff"
            />
    </LinearLayout>
</LinearLayout>
