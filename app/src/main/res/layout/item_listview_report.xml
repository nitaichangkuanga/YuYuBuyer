<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_selector"
        android:padding="@dimen/tv_shop_marleft"
        >

        <TextView
            android:id="@+id/tv_itemReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="举报人"
            android:textColor="@color/colorshopname"
            android:textSize="@dimen/tv_shop_size"
            />

        <TextView
            android:id="@+id/tv_itemReport_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_personal_h"
            android:layout_toRightOf="@id/tv_itemReport"
            android:text="你太猖狂啊"
            android:textColor="@color/colorshopname"
            android:textSize="@dimen/tv_shop_size"
            />

        <ImageView
            android:id="@+id/iv_report_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/enter"
            />

        <TextView
            android:id="@+id/tv_itemReport_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/click_login_top"
            android:layout_marginRight="@dimen/iv_personal_ivh"
            android:layout_toLeftOf="@id/iv_report_jian"
            android:layout_toRightOf="@id/tv_itemReport_name"
            android:gravity="right"
            android:singleLine="true"
            android:text="诈骗类诈骗类有害信息诈骗类有害信息有害信息"
            android:textColor="@color/colorshopname"
            android:textSize="@dimen/tv_shop_size"
            />

        <TextView
            android:id="@+id/tv_itemReport_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_itemReport"
            android:layout_below="@id/tv_itemReport"
            android:layout_marginTop="@dimen/iv_personal_ivh"
            android:text="处理中"
            android:textColor="@color/colorReport"
            android:textSize="@dimen/tv_shop_s"
            />

        <TextView
            android:id="@+id/tv_itemReport_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_itemReport_status"
            android:layout_marginRight="@dimen/iv_personal_ivh"
            android:layout_toLeftOf="@id/iv_report_jian"
            android:text="11:18"
            android:textColor="@color/colorshophint"
            android:textSize="@dimen/tv_shop_s"
            />

        <TextView
            android:id="@+id/tv_itemReport_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_itemReport_status"
            android:layout_marginRight="@dimen/b_reg"
            android:layout_toLeftOf="@id/tv_itemReport_time"
            android:text="2016-11-01"
            android:textColor="@color/colorshophint"
            android:textSize="@dimen/tv_shop_s"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />
</LinearLayout>
