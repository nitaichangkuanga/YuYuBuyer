<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_shopEvaluate_Rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMain"
        >
        <RelativeLayout
            android:id="@+id/rl_shopEvaluate_RelativeLayout"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:background="@drawable/back_reversal_selector"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商铺评价"
            android:textColor="@color/colorshopname"
            android:textSize="@dimen/tv_shop_n"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_shopEvaluate_line"
        android:layout_below="@id/rl_shopEvaluate_Rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />

    <TextView
        android:id="@+id/tv_shopEvaluate_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="暂无数据"
        android:textColor="@color/colordistance"
        android:visibility="gone"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/pb_shopEvaluateLoading_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/in_shopEvaluate_pf"
        android:visibility="gone"
        android:layout_below="@id/iv_shopEvaluate_line"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ListView
            android:id="@+id/shopEvaluate_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:scrollbarStyle="outsideOverlay"
            android:cacheColorHint="#00000000"

            />
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    <!--android:listSelector="@drawable/listview_selector"-->
    <RelativeLayout
        android:id="@+id/rl_shopEvaluate_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_login"
        android:clickable="false"
        android:background="@color/colorCustomProgressBar"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_shopEvaluate_kua"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/xiangsu"
            android:text="(只有商户记录的ID才能对该商铺进行评价)"
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/tv_shop_yuan"
            />
        <TextView
            android:id="@+id/tv_shopEvaluate_evaluate"
            android:layout_above="@id/tv_shopEvaluate_kua"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价商铺"
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/tv_shop_size"
            />

    </RelativeLayout>

</RelativeLayout>
