<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_settingpassword_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >
    <RelativeLayout
        android:id="@+id/rv_settingpass_back"
        android:layout_width="@dimen/click_login_top"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginLeft="@dimen/tv_shop_marleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingPassword"
            android:textSize="@dimen/tv_shop_name"
            android:textColor="@color/colorMain"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_settingpassword_lay"
        android:layout_below="@id/rl_settingpassword_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/tv_shop_mar"
        android:layout_marginRight="@dimen/tv_shop_mar"
        android:background="@drawable/login_edit_shap"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_marginLeft="@dimen/tv_shop_mar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newPassword"
            android:textSize="@dimen/tv_shop_size"
            android:textColor="@color/colorloginreg"
            />
        <com.wushuikeji.www.yuyubuyer.view.ClearEditText
            android:id="@+id/clearEt_settingPassword_newPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_reg"
            android:hint="@string/inputNewPassword"
            android:textSize="@dimen/tv_shop_size"
            android:padding="@dimen/tv_shop_mar"
            android:textColorHint="@color/colorloginhint"
            android:textColor="@color/colorloginreg"
            android:background="@drawable/login_edit_shap"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_settingpassword_l"
        android:layout_below="@id/ll_settingpassword_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/et_reg"
        android:layout_marginLeft="@dimen/tv_shop_mar"
        android:layout_marginRight="@dimen/tv_shop_mar"
        android:background="@drawable/login_edit_shap"
        android:gravity="center_vertical"

        >
        <TextView
            android:layout_marginLeft="@dimen/tv_shop_mar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decidedPassword"
            android:textSize="@dimen/tv_shop_size"
            android:textColor="@color/colorloginreg"
            />
        <com.wushuikeji.www.yuyubuyer.view.ClearEditText
            android:id="@+id/clearEt_settingPassword_decidedPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_reg"
            android:hint="@string/nextinput"
            android:textSize="@dimen/tv_shop_size"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:inputType="textPassword"
            android:textColorHint="@color/colorloginhint"
            android:textColor="@color/colorloginreg"
            android:background="@drawable/login_edit_shap"
            />
    </LinearLayout>

    <Button
        android:id="@+id/b_settingpass_decided"
        android:layout_below="@id/ll_settingpassword_l"
        android:layout_marginTop="@dimen/item_shop_h"
        android:layout_marginLeft="@dimen/et_login"
        android:layout_marginRight="@dimen/et_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/setdecided"
        android:textSize="@dimen/tv_shop_name"
        android:textColor="@color/text_malcolor_selector"
        android:background="@color/colorregister"
        />

    <ImageView
        android:id="@+id/iv_settingPassword_loading"
        android:layout_marginTop="@dimen/b_guide_top"
        android:layout_below="@id/b_settingpass_decided"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
