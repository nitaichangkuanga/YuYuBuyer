<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >
        <RelativeLayout
            android:id="@+id/rl_recharge_back"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back_selector"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textSize="@dimen/tv_shop_name"
            android:textColor="@color/colorMain"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/tv_shop_marleft"
        android:layout_marginRight="@dimen/tv_shop_marleft"
        android:background="@drawable/login_edit_shap"
        android:padding="@dimen/activity_vertical_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:layout_marginLeft="@dimen/tv_main_qu"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_t"
            />
        <com.wushuikeji.www.yuyubuyer.view.ClearEditText
            android:id="@+id/ct_recharge_money"
            android:hint="请输入充值金额"
            android:textSize="@dimen/tv_shop_t"
            android:textColorHint="@color/colorloginhint"
            android:textColor="@color/colorloginreg"
            android:background="@color/colorMain"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:digits="1234567890."
            android:inputType="phone|number"
            android:singleLine="true"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <Button
        android:id="@+id/b_recharge_recharge"
        android:layout_marginLeft="@dimen/ll_guide_h"
        android:layout_marginRight="@dimen/ll_guide_h"
        android:layout_marginTop="@dimen/b_guide_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_marleft"
        android:textSize="@dimen/tv_shop_name"
        android:textColor="@color/text_color_selector"
        android:text="@string/decide"
        android:background="@drawable/login_button_shap"
        />
</LinearLayout>
