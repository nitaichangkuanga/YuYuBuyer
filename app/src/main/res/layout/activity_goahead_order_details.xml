<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_orderDetails_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >

        <RelativeLayout
            android:id="@+id/rl_orderDetails_back"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:background="@drawable/back_selector"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/tv_shop_name"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:paddingLeft="@dimen/tv_main_qu"
        android:paddingRight="@dimen/tv_main_qu"
        android:paddingTop="@dimen/iv_personal_h"
        android:paddingBottom="@dimen/iv_personal_h"
        >
        <com.wushuikeji.www.yuyubuyer.view.RoundedCornerImageView
            android:id="@+id/iv_orderDetails_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_avatar"/>
        <TextView
            android:id="@+id/tv_orderDetails_yu"
            style="@style/commonBlackStyle"
            android:text="与"
            android:layout_marginLeft="@dimen/b_guide_top"
            android:layout_toRightOf="@id/iv_orderDetails_img"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_orderDetails_buyerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_shop_size"
            android:text="你太猖狂啊"
            android:textColor="@color/colorOrder"
            android:layout_marginLeft="@dimen/iv_personal_ivh"
            android:layout_toRightOf="@id/tv_orderDetails_yu"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_orderDetails_call"
            style="@style/commonBlackStyle"
            android:text="正在通话"
            android:layout_marginLeft="@dimen/iv_personal_ivh"
            android:layout_toRightOf="@id/tv_orderDetails_buyerName"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_orderDetails_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_shop_size"
            android:text="进行中"
            android:textColor="@color/colorOrder"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:layout_marginTop="@dimen/tv_shop_mar"
        android:background="@color/colornewsline"
        />
    <RelativeLayout
        android:id="@+id/rl_orderDetails_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:padding="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_orderDetails_t"
            style="@style/commonOrderDetailsStyle"
            android:layout_centerVertical="true"
            android:text="通话时间"
            />

        <TextView
            android:id="@+id/tv_orderDetails_callTime"
            style="@style/commonBlackStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2016-11-01 11:25:00"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_orderDetails_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:paddingLeft="@dimen/tv_shop_med"
        android:paddingRight="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_orderDetails_tv"
            style="@style/commonOrderDetailsStyle"
            android:layout_centerVertical="true"
            android:text="通话时长"
            />

        <TextView
            android:id="@+id/tv_orderDetails_time"
            style="@style/commonBlackStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2小时"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_orderDetails_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:padding="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_orderDetails_num"
            style="@style/commonOrderDetailsStyle"
            android:layout_centerVertical="true"
            android:text="消费金额"
            />

        <TextView
            android:id="@+id/tv_orderDetails_bankCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_shop_size"
            android:textColor="@color/colorOrder"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="￥100"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:paddingLeft="@dimen/tv_shop_med"
        android:paddingRight="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_orderDetails_add"
            style="@style/commonOrderDetailsStyle"
            android:layout_centerVertical="true"
            android:text="时长加分"
            />

        <TextView
            android:id="@+id/tv_orderDetails_addScore"
            style="@style/commonBlackStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+40"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:padding="@dimen/tv_shop_med"
        >

        <TextView
            android:id="@+id/tv_orderDetails_s"
            style="@style/commonOrderDetailsStyle"
            android:layout_centerVertical="true"
            android:text="额外加分"
            />

        <TextView
            android:id="@+id/tv_orderDetails_yuScore"
            style="@style/commonBlackStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+20"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />

    <Button
        android:id="@+id/b_orderDetails_recharge"
        android:layout_marginLeft="@dimen/ll_guide_h"
        android:layout_marginRight="@dimen/ll_guide_h"
        android:layout_marginTop="@dimen/ll_guide_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_marleft"
        android:textSize="@dimen/tv_shop_t"
        android:textColor="@color/text_color_selector"
        android:text="完成订单"
        android:background="@drawable/login_button_shap"
        />
    <Button
        android:id="@+id/b_account_withdraw"
        android:layout_marginLeft="@dimen/ll_guide_h"
        android:layout_marginRight="@dimen/ll_guide_h"
        android:layout_marginTop="@dimen/tv_shop_mar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_marleft"
        android:textSize="@dimen/tv_shop_t"
        android:textColor="@color/text_redcolor_selector"
        android:text="申请退款"
        android:background="@drawable/details_button_selector"
        />
</LinearLayout>
