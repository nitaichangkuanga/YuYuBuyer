<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >

        <RelativeLayout
            android:id="@+id/rl_personalOrder_back"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:background="@drawable/back_selector"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personal_order"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/tv_shop_name"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colornewsline"
        />

    <LinearLayout
        android:id="@+id/ll_switch_videoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_selector"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_reg"
            android:layout_weight="1"
            android:padding="@dimen/tv_shop_mar"
            android:text="视频接单"
            android:textColor="@color/colorloginreg"
            android:textSize="@dimen/tv_shop_size"
            />

        <com.wushuikeji.www.yuyubuyer.view.EaseSwitchButton
            android:id="@+id/custom_switch_videoOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tv_shop_marleft"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colornewsline"
        />

    <LinearLayout
        android:id="@+id/ll_switch_linell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_selector"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_reg"
            android:layout_weight="1"
            android:padding="@dimen/tv_shop_mar"
            android:text="@string/line_order"
            android:textColor="@color/colorloginreg"
            android:textSize="@dimen/tv_shop_size"
            />

        <com.wushuikeji.www.yuyubuyer.view.EaseSwitchButton
            android:id="@+id/custom_switch_lineOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tv_shop_marleft"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colornewsline"
        />

    <LinearLayout
        android:id="@+id/ll_switch_islinell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/colorMain"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_reg"
            android:layout_weight="1"
            android:padding="@dimen/tv_shop_mar"
            android:text="状态"
            android:textColor="@color/colorloginreg"
            android:textSize="@dimen/tv_shop_size"
            />

        <RadioGroup
            android:id="@+id/rg_personOrder_RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tv_shop_marleft"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rb_personOrder_onLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/rb_person_order_selector"
                android:drawablePadding="5dp"
                android:text="在线"
                android:textColor="@color/colorshophint"
                android:textSize="@dimen/tv_shop_size"
                />

            <RadioButton
                android:id="@+id/rb_personOrder_cloaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/rb_person_order_selector"
                android:drawablePadding="5dp"
                android:text="隐身"
                android:textColor="@color/colorshophint"
                android:textSize="@dimen/tv_shop_size"
                />
        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />
    <ProgressBar
        android:id="@+id/pb_personalOrder_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/b_guide_top"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />
</LinearLayout>
