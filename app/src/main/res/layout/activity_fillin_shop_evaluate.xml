<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        >
        <RelativeLayout
            android:id="@+id/rl_fillin_RelativeLayout"
            android:layout_width="@dimen/click_login_top"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="@dimen/tv_shop_marleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back_reversal_selector"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_evaluate"
            android:textSize="@dimen/tv_shop_name"
            android:textColor="@color/colorshopevaluate"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colorshopevaluateLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/tv_shop_marleft"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_shop_name"
            android:textColor="@color/colorshopevaluateM"
            android:text="@string/shop_manyi"
            />
        <LinearLayout
        android:id="@+id/ll_fillin_heartOne"
        android:layout_marginLeft="@dimen/tv_shop_mar"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_selector"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fillin_heartTwo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_selector"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fillin_heartThree"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_selector"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fillin_heartfour"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_selector"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fillin_heartFive"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_selector"
                />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/tv_shop_name"
        android:textColor="@color/colorshopevaluateM"
        />

    <EditText
        android:id="@+id/et_fillinShop_et"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="top"
        android:padding="@dimen/tv_shop_marleft"
        android:hint="@string/shop_content"
        android:textSize="@dimen/tv_shop_size"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColorHint="@color/colorloginhint"
        android:textColor="@color/colorloginreg"
        android:background="@drawable/login_edit_shap"
        />

    <Button
        android:id="@+id/b_fillinShop_submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/b_guide_left"
        android:layout_width="@dimen/et_main_shopE"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_marleft"
        android:textSize="@dimen/tv_shop_name"
        android:textColor="@color/colorMain"
        android:text="@string/shop_commit"
        android:background="@drawable/login_button_shap"
        />
    <ImageView
        android:id="@+id/iv_fillinShop_loading"
        android:layout_marginTop="@dimen/b_guide_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
