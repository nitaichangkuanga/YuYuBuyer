<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_selector"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/itemListView_bankType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国农业银行 储蓄卡"
            android:textColor="@color/colorpoptitle"
            android:textSize="@dimen/tv_shop_size"
            />
        <TextView
            android:id="@+id/itemListView_foot"
            android:layout_marginTop="@dimen/tv_shop_martop"
            android:layout_alignLeft="@id/itemListView_bankType"
            android:layout_below="@id/itemListView_bankType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尾号"
            android:textColor="@color/colorregister"
            android:textSize="@dimen/tv_shop_size"
            />
        <TextView
            android:id="@+id/itemListView_bankNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/itemListView_foot"
            android:layout_toRightOf="@id/itemListView_foot"
            android:layout_marginLeft="@dimen/tv_shop_martop"
            android:text="9477"
            android:textColor="@color/colorregister"
            android:textSize="@dimen/tv_shop_size"
            />
        <ImageView
            android:id="@+id/itemListView_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/tv_shop_marleft"
            android:src="@mipmap/enter"
            />
    </RelativeLayout>

</LinearLayout>
