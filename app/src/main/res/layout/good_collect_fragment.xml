<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_goodCollect_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="暂无数据"
        android:textColor="@color/colordistance"
        android:visibility="gone"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/pb_goodCollectLoading_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <com.wushuikeji.www.yuyubuyer.mylibrary.PullToRefreshSwipeMenuListView
        android:id="@+id/goodCollect_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:scrollbarStyle="outsideOverlay"
        android:cacheColorHint="#00000000"
        android:scrollbarThumbVertical="@mipmap/ui_shuxian"
        android:visibility="gone"
        />
</RelativeLayout>
